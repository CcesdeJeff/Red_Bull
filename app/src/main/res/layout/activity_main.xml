<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B162F"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonRegistrar"
        android:layout_width="305dp"
        android:layout_height="114dp"
        android:backgroundTint="#CC1C4A"
        android:fontFamily="@font/racing_sans_one"
        android:text="Registrate"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="986dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="496dp"
        android:layout_height="224dp"
        android:fontFamily="@font/racing_sans_one"
        android:text="Red Bull Karting"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="96sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.539" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="584dp"
        android:layout_height="468dp"
        android:layout_marginBottom="78dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/red_bull_kart_fight_2021_logo" />

    <Button
        android:id="@+id/buttonIngresar"
        android:layout_width="310dp"
        android:layout_height="112dp"
        android:layout_marginBottom="151dp"
        android:backgroundTint="#CC1C4A"
        android:fontFamily="@font/racing_sans_one"
        android:text="Ingresar"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@+id/button2"
        tools:layout_editor_absoluteX="266dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="142dp"
        app:srcCompat="@drawable/logo_f1"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1136dp" />
</androidx.constraintlayout.widget.ConstraintLayout>